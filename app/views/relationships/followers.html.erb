<div class='container'>
  <table class='table'>
      <h2>Follower Users</h2>
        <% if @users.exists? %>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
            <td><%= user.name %></td>
            <td>Follows: <%= user.followings.count %></td>
            <td>Followers: <%= user.followers.count %></td>
            <td><%= link_to 'Show', users_path(user), class: "user_#{user.id}" %></td>
          </tr>
          <% end %>
        </tbody>
    <% else %>
      <p>ユーザーはいません</p>
    <% end %>
    </tbody>
  </table>
 </div>  