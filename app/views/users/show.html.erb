<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
       <table class='table'>
          <tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
          <tr>
	          <th>name</th>
	          <th><%= @user.name %></th>
          </tr>
          <tr>
	           <th>introduction</th>
          	 <th><%= @user.introduction %></th>
          </tr>
          <tr>
	           <th>Follows</th>
	           <th><%= @user.followings.count %></th>
          </tr>
          <tr>
	          <th>Followers</th>
	          <th> <%= @user.followers.count %></th>
          </tr>
          </table>
          
          <% if current_user.following?(@user) %>
          <%= link_to "Unfollow", user_relationships_path(@user), method: :delete, class: 'btn btn-success' %>
　　　    <% else %>
　　　    <%= link_to "Follow", user_relationships_path(@user), method: :post, class: 'btn btn-success' %>
　　　    <% end %>
　　　    
　　　   
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
    </div>
  </div>
</div>